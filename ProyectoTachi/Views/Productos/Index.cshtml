@model List<Abstracciones.Modelos.ProductoDto>

@{
    ViewData["Title"] = "Productos";
}

<h2>Productos Activos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Producto</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SKU</td>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-warning">Editar</a>

                    <form asp-action="Desactivar" asp-route-id="@item.ProductoId"
                          method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger">
                            Desactivar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>