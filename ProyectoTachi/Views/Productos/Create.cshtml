@model Abstracciones.Modelos.ProductoDto

@{
    ViewData["Title"] = "Nuevo Producto";
}

<h2>Nuevo Producto</h2>

<form asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="SKU" class="form-label"></label>
            <input asp-for="SKU" class="form-control" />
            <span asp-validation-for="SKU" class="text-danger"></span>
        </div>

        <div class="col-md-8">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="CategoriaProductoId" class="form-label">Categoría (Id)</label>
            <input asp-for="CategoriaProductoId" class="form-control" />
            <span asp-validation-for="CategoriaProductoId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="UnidadMedidaId" class="form-label">Unidad Medida (Id)</label>
            <input asp-for="UnidadMedidaId" class="form-control" />
            <span asp-validation-for="UnidadMedidaId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="StockMinimo" class="form-label"></label>
            <input asp-for="StockMinimo" class="form-control" />
            <span asp-validation-for="StockMinimo" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Costo" class="form-label"></label>
            <input asp-for="Costo" class="form-control" />
            <span asp-validation-for="Costo" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
